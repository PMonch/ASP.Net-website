<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/semantic.css" rel="stylesheet" type="text/css" />
    
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="ui main menu">
        @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "item" })
        @Html.ActionLink("VideoGames", "Index", "VideoGames", new { productType = "Videogame" }, new { @class = "item" })
        @Html.ActionLink("Merchandise", "Index", "Merchandise", new {productType = "Merchandise" }, new { @class = "item" })
        @Html.ActionLink("Console", "Index", "Console", new { productType = "Console" }, new { @class = "item" })
        @Html.ActionLink("Accessoires", "Index", "Accessoires", new { productType = "Accessoire" }, new { @class = "item" })
        @Html.ActionLink("BoardGames", "Index", "BoardGames", new { productType = "BoardGame" }, new { @class = "item" })
        
        <div class="right menu">
            @if (Session["Username"]== null)
            {
                @Html.ActionLink("Login", "Login", "Account", new { area = "" }, new { @class = "item" })
                @Html.ActionLink("SignUp", "Register", "Account", new { area = "" }, new { @class = "item" })
            }
            else
            {
                var name = Session["Username"].ToString();
                @Html.ActionLink(name, "Profile", "Account", new { area = "" }, new { @class = "item" })
                @Html.ActionLink("Log Out", "LogOut", "Account", new { area = "" }, new { @class = "item" });
               
            }
                    <div class="item">
                        <div class="ui icon input">
                            <input type="text" placeholder="Search...">
                            <i class="search link icon"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="container body-content">
                @RenderBody()
                <hr />


                <footer>
                    <p>&copy; @DateTime.Now.Year - Game Mania</p>
                </footer>
            </div>

            <script src="~/Scripts/jquery-1.10.2.min.js"></script>
            <script src="/javascript/icon.js"></script>
</body>
</html>